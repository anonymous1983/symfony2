"use strict";

var argv = require('yargs').argv;

// --------------
// Configuration.
var PORT = argv['port'] || 5555;
var LIVE_RELOAD_PORT = argv['reload-port'] || 4002;
var APP_BASE = argv['base'] || '/';

var APP_SRC = 'src/AA';
var APP_DIST = 'web/dist';

var PATH = {
    dist: {
        all: APP_DIST,
        js: APP_DIST + '/js',
        css: APP_DIST + '/css',
        less: APP_DIST + '/less',
        sass: APP_DIST + '/sass',
        img: APP_DIST + '/img'
    },
    src: {
        all: APP_SRC,
        js: [
            APP_SRC + '/**/*.js'
        ],
        less: [
            APP_SRC + '/**/*.less'
        ],
        sass: [
            APP_SRC + '/**/*.sass'
        ],
        img: [
            APP_SRC + '/**/*.png',
            APP_SRC + '/**/*.jpeg',
            APP_SRC + '/**/*.jpg',
            APP_SRC + '/**/*.gif'
        ]
    },
    clean:[
        APP_DIST + '/**'
    ]
};

var CONFIG = {
    PORT: PORT,
    LIVE_RELOAD_PORT: LIVE_RELOAD_PORT,
    APP_BASE: APP_BASE,
    APP_SRC: APP_SRC,
    APP_DIST: APP_DIST,
    PATH: PATH
};
module.exports = CONFIG;
